<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.utdallas.ui_quiz.AddQuestionActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a Question"
        android:textSize="48dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/addQuestionTxtBox"
        android:layout_width="318dp"
        android:layout_height="245dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Tap here and enter a True/False question!"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <Button
        android:id="@+id/setTrueBtn"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginLeft="42dp"
        android:background="@drawable/true_button_background"
        android:text="Set True"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/addQuestionTxtBox"/>

    <Button
        android:id="@+id/setFalseBtn"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginRight="47dp"
        android:background="@drawable/false_button_background"
        android:text="Set False"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/addQuestionTxtBox"
        app:layout_constraintLeft_toRightOf="@+id/setTrueBtn"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"/>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="327dp"
        android:layout_height="121dp"
        android:layout_marginBottom="29dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="Submit Question!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
